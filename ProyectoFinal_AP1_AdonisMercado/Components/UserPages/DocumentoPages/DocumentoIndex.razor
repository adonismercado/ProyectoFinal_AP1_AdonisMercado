@page "/documentos"
@attribute [Authorize(Roles = "User")]

@inject PedidoServices pedidoServices
@inject DocumentoServices documentoServices
@inject ToastService toastService
@rendermode InteractiveServer

<PageTitle>Documentos</PageTitle>

<div class="container-fluid py-4">

    <div class="text-center mb-3">
        <h2 class="fw-bold">Documentos</h2>
    </div>

    <div class="card shadow-sm border-0 mx-auto" style="max-width:1500px;">

        <div class="card-header bg-white py-3">
            <div class="row g-3 align-items-end">

                <div class="col-md-3">
                    <label class="form-label fw-bold">Filtrar Por:</label>
                    <select class="form-select" @bind="Filtro">
                        <option value="" disabled selected>Seleccione</option>
                        <option value="PedidoId">Pedido ID</option>
                        <option value="NombrePedido">Nombre Pedido</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold">Buscar</label>
                    <div class="input-group">
                        <input type="text" class="form-control" @bind="ValorFiltro" placeholder="Buscar..." />
                        <button class="btn btn-outline-danger" @onclick="Buscar">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </div>
                </div>

            </div>
        </div>

        <div class="card-body px-0">
            <div class="table-responsive">
                <table class="table table-hover text-center align-middle mb-0">

                    <thead class="table-light fw-bold">
                        <tr>
                            <th>Pedido ID</th>
                            <th>Nombre Pedido</th>
                            <th>Estado</th>
                            <th>Commercial Invoice</th>
                            <th>Bill of Lading (B/L)</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var pedido in ListaPedidos)
                        {
                            <tr>
                                <td>@pedido.PedidoId</td>
                                <td>@pedido.NombrePedido</td>

                                <td>
                                    @if (pedido.Estado == "Enviado")
                                    {
                                        <span class="badge bg-danger">Sin Completar</span>
                                    }
                                    else if (pedido.Estado == "Completado")
                                    {
                                        <span class="badge bg-success">Completado</span>
                                    }
                                </td>

                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <button class="btn btn-success"
                                                @onclick="@(() => AbrirModalSubir(pedido.PedidoId, "Commercial Invoice"))">
                                            <i class="fa fa-upload"></i>
                                        </button>
                                        <button class="btn btn-secondary"
                                                @onclick="@(() => AbrirModalVerCI(pedido.PedidoId))">
                                            <i class="fa fa-eye"></i>
                                        </button>
                                    </div>
                                </td>

                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <button class="btn btn-success"
                                                @onclick="@(() => AbrirModalSubir(pedido.PedidoId, "Bill of Lading"))">
                                            <i class="fa fa-upload"></i>
                                        </button>
                                        <button class="btn btn-secondary"
                                                @onclick="@(() => AbrirModalVerBL(pedido.PedidoId))">
                                            <i class="fa fa-eye"></i>
                                        </button>
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer text-center bg-white py-3">
            <span class="text-muted">Mostrando @ListaPedidos.Count documento(s)</span>
        </div>
    </div>

</div>


@if (mostrarModalSubir)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.6);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fa fa-upload me-2"></i> Subir @TipoDocumento
                    </h5>
                    <button class="btn-close" @onclick="CerrarModalSubir"></button>
                </div>

                <div class="modal-body">
                    <label class="form-label fw-bold">Archivo</label>
                    <InputFile OnChange="OnFileChange"
                               accept=".pdf,.jpg,.jpeg,.png"
                               class="form-control" />
                    <small class="text-muted">
                        Permitido: PDF, JPG, JPEG, PNG - Máx 10MB
                    </small>
                </div>

                <div class="modal-footer">

                    <button class="btn btn-secondary" @onclick="CerrarModalSubir">
                        Cancelar
                    </button>

                    <button class="btn btn-danger"
                            @onclick="SubirDocumento"
                            disabled="@(archivoSeleccionado == null)">
                        <i class="fa-solid fa-cloud-upload-alt me-1"></i>
                        Subir
                    </button>

                </div>
            </div>
        </div>
    </div>
}

@if (mostrarModalVerCI)
{
    <div class="modal fade show d-block" style="background:rgba(0,0,0,0.6)" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fa fa-eye me-2"></i> Commercial Invoice del Pedido #@pedidoIdVer
                    </h5>
                    <button class="btn-close" @onclick="CerrarModalVerCI"></button>
                </div>

                <div class="modal-body">

                    @if (DocumentoCI == null)
                    {
                        <div class="alert alert-warning text-center">
                            No se ha subido un Commercial Invoice para este pedido.
                        </div>
                    }
                    else
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">

                            <div>
                                <strong>@DocumentoCI.TipoDocumento</strong><br />
                                <small class="text-muted">@DocumentoCI.NombreOriginal</small><br />
                                <small class="text-muted">Fecha: @DocumentoCI.FechaEmision</small>
                            </div>

                            <div class="d-flex gap-2">
                                <a class="btn btn-sm btn-primary" href="@DocumentoCI.RutaDocumento" target="_blank">
                                    <i class="fa fa-download"></i>
                                </a>
                                <button class="btn btn-sm btn-danger"
                                        @onclick="() => ConfirmarEliminarDocumento(DocumentoCI.DocumentoId, DocumentoCI.TipoDocumento)">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </div>

                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CerrarModalVerCI">Cerrar</button>
                </div>

            </div>
        </div>
    </div>
}

@if (mostrarModalVerBL)
{
    <div class="modal fade show d-block" style="background:rgba(0,0,0,0.6)" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fa fa-eye me-2"></i> Bill of Lading del Pedido #@pedidoIdVer
                    </h5>
                    <button class="btn-close" @onclick="CerrarModalVerBL"></button>
                </div>

                <div class="modal-body">

                    @if (DocumentoBL == null)
                    {
                        <div class="alert alert-warning text-center">
                            No se ha subido un Bill of Lading para este pedido.
                        </div>
                    }
                    else
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">

                            <div>
                                <strong>@DocumentoBL.TipoDocumento</strong><br />
                                <small class="text-muted">@DocumentoBL.NombreOriginal</small><br />
                                <small class="text-muted">Fecha: @DocumentoBL.FechaEmision</small>
                            </div>

                            <div class="d-flex gap-2">
                                <a class="btn btn-sm btn-primary" href="@DocumentoBL.RutaDocumento" target="_blank">
                                    <i class="fa fa-download"></i>
                                </a>
                                <button class="btn btn-sm btn-danger"
                                        @onclick="() => ConfirmarEliminarDocumento(DocumentoBL.DocumentoId, DocumentoBL.TipoDocumento)">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </div>

                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CerrarModalVerBL">Cerrar</button>
                </div>

            </div>
        </div>
    </div>
}

@if (mostrarModalConfirmarEliminar)
{
    <div class="modal fade show d-block" tabindex="-1"
         style="background-color: rgba(0,0,0,0.6);">

        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="fw-bold">Confirmar Eliminación</h5>
                    <button class="btn-close" @onclick="CancelarEliminar"></button>
                </div>

                <div class="modal-body text-center">
                    <i class="fa-solid fa-triangle-exclamation text-warning" style="font-size:50px;"></i>
                    <p class="mt-3">¿Seguro que desea eliminar este documento?</p>
                    <p class="text-muted">Esta acción no se puede deshacer.</p>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CancelarEliminar">Cancelar</button>
                    <button class="btn btn-danger" @onclick="EliminarDocumentoConfirmado">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    public List<Pedido> ListaPedidos { get; set; } = new();
    public string? Filtro { get; set; }
    public string? ValorFiltro { get; set; }

    private bool mostrarModalSubir = false;
    private int pedidoSeleccionadoId;
    private string TipoDocumento = "";
    private IBrowserFile? archivoSeleccionado;

    private List<Documento> DocumentosPedido = new();
    private bool mostrarModalVerCI = false;
    private bool mostrarModalVerBL = false;

    private Documento? DocumentoCI;
    private Documento? DocumentoBL;

    private bool mostrarModalConfirmarEliminar = false;
    private string documentoTipoAEliminar = "";

    private int pedidoIdVer;
    private int pedidoVerId;
    private int documentoAEliminarId;

    protected override async Task OnInitializedAsync()
    {
        ListaPedidos = await pedidoServices.ListarPedidos(p => p.Estado == "Enviado" || p.Estado == "Completado" && p.isActive);
    }

    public async Task Buscar()
    {
        if (!string.IsNullOrWhiteSpace(ValorFiltro))
        {
            if (Filtro == "PedidoId" && int.TryParse(ValorFiltro, out var id))
            {
                ListaPedidos = await pedidoServices.ListarPedidos(p => p.PedidoId == id && p.Estado == "Enviado" && p.isActive);
            }
            else if (Filtro == "NombrePedido")
            {
                ListaPedidos = await pedidoServices.ListarPedidos(p => p.NombrePedido.ToLower().Contains(ValorFiltro.ToLower()) && p.Estado == "Enviado" && p.isActive);
            }
        }
        else
        {
            ListaPedidos = await pedidoServices.ListarPedidos(p => p.isActive && p.Estado == "Enviado");
        }
    }

    public void AbrirModalSubir(int pedidoId, string tipoDoc)
    {
        pedidoSeleccionadoId = pedidoId;
        TipoDocumento = tipoDoc;
        archivoSeleccionado = null;
        mostrarModalSubir = true;
    }

    public void CerrarModalSubir()
    {
        mostrarModalSubir = false;
        archivoSeleccionado = null;
    }

    public void OnFileChange(InputFileChangeEventArgs e)
    {
        archivoSeleccionado = e.File;
    }

    public async Task SubirDocumento()
    {
        if (archivoSeleccionado == null)
        {
            return;
        }

        var subido = await documentoServices.Guardar(
            archivoSeleccionado,
            pedidoSeleccionadoId,
            TipoDocumento
        );

        if (subido)
        {
            toastService.ShowSuccess("Documento subido exitosamente!");
            ListaPedidos = await pedidoServices.ListarPedidos(p => p.isActive && p.Estado == "Enviado");
        }
        else
        {
            toastService.ShowError("No se pudo subir el documento.");
        }


        CerrarModalSubir();
    }

    public async Task AbrirModalVerCI(int pedidoId)
    {
        pedidoIdVer = pedidoId;

        var documentos = await documentoServices.ObtenerDocumentosPorPedido(pedidoId);
        DocumentoCI = documentos.FirstOrDefault(d => d.TipoDocumento == "Commercial Invoice");

        mostrarModalVerCI = true;
    }

    public async Task AbrirModalVerBL(int pedidoId)
    {
        pedidoIdVer = pedidoId;

        var documentos = await documentoServices.ObtenerDocumentosPorPedido(pedidoId);
        DocumentoBL = documentos.FirstOrDefault(d => d.TipoDocumento == "Bill of Lading");

        mostrarModalVerBL = true;
    }

    public void CerrarModalVerCI()
    {
        mostrarModalVerCI = false;
        DocumentoCI = null;
    }

    public void CerrarModalVerBL()
    {
        mostrarModalVerBL = false;
        DocumentoBL = null;
    }

    public void ConfirmarEliminarDocumento(int documentoId, string tipoDocumento)
    {
        documentoAEliminarId = documentoId;
        documentoTipoAEliminar = tipoDocumento;
        mostrarModalConfirmarEliminar = true;
    }

    public void CancelarEliminar()
    {
        mostrarModalConfirmarEliminar = false;
        documentoAEliminarId = 0;
        documentoTipoAEliminar = "";
    }

    public async Task EliminarDocumentoConfirmado()
    {
        if (documentoAEliminarId <= 0)
            return;

        var eliminado = await documentoServices.Eliminar(documentoAEliminarId);

        if (eliminado)
        {
            toastService.ShowSuccess("Documento eliminado exitosamente!");
            DocumentosPedido = await documentoServices.ObtenerDocumentosPorPedido(pedidoVerId);
            ListaPedidos = await pedidoServices.ListarPedidos(p => p.isActive && p.Estado == "Enviado");
        }
        else
        {
            toastService.ShowError("Error al eliminar el documento.");
        }

        CancelarEliminar();
        CerrarModalVerBL();
        CerrarModalVerCI();
    }
}