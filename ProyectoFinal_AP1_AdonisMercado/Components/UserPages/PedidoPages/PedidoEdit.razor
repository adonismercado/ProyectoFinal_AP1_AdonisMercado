@page "/pedido/edit/{PedidoId:int}"
@layout EmptyLayout

@attribute [Authorize(Roles = "User")]
@inject VehiculoService vehiculoService
@inject PedidoServices pedidoServices
@inject DistribuidorServices distribuidorServices
@inject NavigationManager nav
@rendermode InteractiveServer

<PageTitle>Editar Pedido</PageTitle>

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Editar Pedido</h2>

        <a href="/pedidos" class="btn btn-light d-flex align-items-center gap-2">
            <i class="fa-solid fa-arrow-left"></i> Volver
        </a>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-4">

            <EditForm Model="Pedido" OnValidSubmit="Guardar" FormName="EditPedido">

                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Distribuidor</label>
                    <select class="form-select form-control" @bind="Pedido.DistribuidorId">
                        <option value="0" disabled>Seleccione un distribuidor</option>
                        @foreach (var d in ListaDistribuidores)
                        {
                            <option value="@d.DistribuidorId">@d.Nombre</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Pedido ID</label>
                    <input type="number" class="form-control" @bind="Pedido.PedidoId" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Fecha</label>
                    <input type="date" class="form-control" @bind="Pedido.FechaPedido" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Nombre del Pedido</label>
                    <input type="text" class="form-control" @bind="Pedido.NombrePedido" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Estado</label>
                    <select class="form-select" @bind="Pedido.Estado">
                        <option value="No Enviado">No Enviado</option>
                        <option value="Enviado">Enviado</option>
                    </select>
                </div>

                <hr />

                <div class="border p-3 rounded">

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="fw-bold">
                            <i class="fa-solid fa-car-side text-danger"></i> Vehículos
                        </h4>

                        <button type="button" class="btn btn-danger d-flex align-items-center gap-2"
                                @onclick="AbrirModalVehiculos">
                            <i class="fa-solid fa-car"></i> Seleccionar Vehículos
                        </button>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(errorMensaje))
                    {
                        <div class="alert alert-danger">@errorMensaje</div>
                    }

                    <hr />

                    <div class="table-responsive">
                        <table class="table table-striped table-hover text-center mt-3">
                            <thead class="bg-light fw-bold">
                                <tr>
                                    <th>ID</th>
                                    <th>Marca</th>
                                    <th>Modelo</th>
                                    <th>Color</th>
                                    <th>Año</th>
                                    <th>Motor</th>
                                    <th>Transmisión</th>
                                    <th>Tracción</th>
                                    <th>Puertas</th>
                                    <th>Combustible</th>
                                    <th>Cantidad</th>
                                    <th>Precio</th>
                                    <th>Sub Total</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var det in Pedido.PedidoDetalles)
                                {
                                    var v = ListaVehiculos.First(x => x.VehiculoId == det.VehiculoId);

                                    <tr>
                                        <td>@v.VehiculoId</td>
                                        <td>@v.MarcaVehiculo</td>
                                        <td>@v.ModeloVehiculo</td>
                                        <td>@v.ColorVehiculo</td>
                                        <td>@v.AnioFabricacion</td>
                                        <td>@v.Motor</td>
                                        <td>@v.Transmision</td>
                                        <td>@v.Traccion</td>
                                        <td>@v.NumeroPuertas</td>
                                        <td>@v.TipoCombustible</td>
                                        <td>@det.Cantidad</td>
                                        <td>USD$@det.PrecioUnitario</td>
                                        <td>USD$@(det.Cantidad* det.PrecioUnitario)</td>
                                        <td>
                                            <button class="btn btn-sm btn-danger"
                                                    @onclick="() => RemoverDetalle(det)">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Cantidad total</label>
                            <input type="number" class="form-control" readonly
                                   value="@Pedido.PedidoDetalles.Count" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Total</label>
                            <input type="number" class="form-control" readonly
                                   value="@Pedido.PedidoDetalles.Sum(p => p.Cantidad * p.PrecioUnitario)" />
                        </div>
                    </div>

                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4 d-flex align-items-center mx-auto gap-2">
                        <i class="fa-solid fa-floppy-disk"></i> Guardar Cambios
                    </button>
                </div>

            </EditForm>

        </div>
    </div>

</div>

@if (mostrarModalVehiculos)
{
    <div class="modal fade show d-block" tabindex="-1" style="background:rgba(0,0,0,0.6)">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header bg-light">
                    <h5 class="modal-title">
                        <i class="fa-solid fa-car"></i> Seleccionar Vehículo
                    </h5>
                    <button class="btn-close btn-close-black"
                            @onclick="CerrarModalVehiculos">
                    </button>
                </div>

                <div class="modal-body">
                    <div class="row g-4">

                        @foreach (var v in ListaVehiculos)
                        {
                            <div class="col-12 col-md-4 col-lg-3 mb-3">
                                <div class="card shadow-sm">

                                    <img src="@($"/vehiculos/{v.VehiculoId}.jpg")"
                                         class="card-img-bottom"
                                         style="height:300px; object-fit:cover;" />

                                    <div class="card-body text-center">
                                        <h5 class="card-title text-black">
                                            @v.MarcaVehiculo @v.ModeloVehiculo
                                        </h5>

                                        <p class="text-muted mb-1">
                                            Motor: @v.Motor
                                        </p>
                                        <p class="text-muted mb-1">
                                            @v.Transmision • @v.Traccion
                                        </p>
                                        <p class="text-muted mb-2">
                                            Puertas: @v.NumeroPuertas
                                        </p>

                                        <p class="text-danger fw-bold">USD$@v.Precio</p>

                                        <button class="btn btn-outline-dark w-100 mb-2"
                                                @onclick="() => AbrirModalDatos(v)">
                                            <i class="fa-solid fa-circle-info"></i> Detalles
                                        </button>

                                        <button class="btn btn-danger w-100"
                                                @onclick="() => AbrirModalCantidadPrecio(v)">
                                            Seleccionar
                                        </button>
                                    </div>

                                </div>
                            </div>
                        }

                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CerrarModalVehiculos">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}
@if (mostrarModalCantidadPrecio)
{
    <div class="modal fade show d-block" tabindex="-1" style="background:rgba(0,0,0,0.6)">
        <div class="modal-dialog modal-md modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-light text-black">
                    <h5 class="modal-title">
                        <i class="fa-solid fa-tag"></i> Configurar Detalle
                    </h5>
                    <button class="btn-close btn-close-black"
                            @onclick="CerrarModalCantidadPrecio">
                    </button>
                </div>

                <div class="modal-body">

                    <div class="text-center mb-3">
                        <img src="@($"/vehiculos/{VehiculoSeleccionado.VehiculoId}.jpg")"
                             onerror="this.src='/vehiculos/default.jpg'"
                             class="img-fluid rounded shadow-sm"
                             style="max-height:180px; object-fit:cover;" />
                    </div>

                    <h5 class="text-center fw-bold">
                        @VehiculoSeleccionado.MarcaVehiculo @VehiculoSeleccionado.ModeloVehiculo
                    </h5>

                    <p class="text-muted text-center">
                        @VehiculoSeleccionado.AnioFabricacion • @VehiculoSeleccionado.ColorVehiculo
                    </p>

                    <div class="mb-3">
                        <label class="form-label">Cantidad</label>
                        <input type="number" class="form-control" @bind="Cantidad" min="1" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Precio</label>
                        <input type="number" class="form-control" @bind="Precio" readonly />
                    </div>

                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CerrarModalCantidadPrecio">Cerrar</button>
                    <button class="btn btn-danger" @onclick="AgregarDetalle">
                        <i class="fa-solid fa-check"></i> Agregar
                    </button>
                </div>

            </div>
        </div>
    </div>
}

@if (mostrarModalDatosVehiculo)
{
    <div class="modal fade show d-block" tabindex="-1" style="background:rgba(0,0,0,0.6)">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header bg-light text-black">
                    <h5 class="modal-title"><i class="fa-solid fa-car"></i> Detalles del Vehículo</h5>
                    <button class="btn-close btn-close-black" @onclick="CerrarModalDatos"></button>
                </div>

                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-5 text-center mb-3">
                            <img src="@($"/vehiculos/{VehiculoSeleccionado.VehiculoId}.jpg")"
                                 class="img-fluid rounded shadow-sm"
                                 style="max-height:300px; object-fit:cover;" />
                        </div>

                        <div class="col-md-7">
                            <h4 class="fw-bold">
                                @VehiculoSeleccionado.MarcaVehiculo @VehiculoSeleccionado.ModeloVehiculo
                            </h4>

                            <p class="text-muted">Año: @VehiculoSeleccionado.AnioFabricacion</p>

                            <p><strong>Color:</strong> @VehiculoSeleccionado.ColorVehiculo</p>
                            <p><strong>Motor:</strong> @VehiculoSeleccionado.Motor</p>
                            <p><strong>Transmisión:</strong> @VehiculoSeleccionado.Transmision</p>
                            <p><strong>Tracción:</strong> @VehiculoSeleccionado.Traccion</p>
                            <p><strong>Kilometraje:</strong> @VehiculoSeleccionado.Kilometraje km</p>
                            <p><strong>Puertas:</strong> @VehiculoSeleccionado.NumeroPuertas</p>
                            <p><strong>Chasis:</strong> @VehiculoSeleccionado.NumeroChasis</p>
                            <p><strong>Estado:</strong> @VehiculoSeleccionado.EstadoVehiculo</p>
                            <p><strong>Combustible:</strong> @VehiculoSeleccionado.TipoCombustible</p>

                            <p class="mt-3 fs-5 fw-bold text-danger">
                                Precio: USD$@VehiculoSeleccionado.Precio
                            </p>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CerrarModalDatos">
                        <i class="fa-solid fa-xmark"></i> Cerrar
                    </button>
                </div>

            </div>
        </div>
    </div>
}

@code {

    [Parameter] public int PedidoId { get; set; }

    public Pedido Pedido { get; set; } = new();
    public List<Vehiculo> ListaVehiculos { get; set; } = new();
    public List<Distribuidor> ListaDistribuidores { get; set; } = new();
    public Vehiculo VehiculoSeleccionado { get; set; } = new();

    public int Cantidad { get; set; }
    public decimal Precio { get; set; }

    public string? errorMensaje;

    public bool mostrarModalVehiculos = false;
    public bool mostrarModalCantidadPrecio = false;
    public bool mostrarModalDatosVehiculo = false;

    protected override async Task OnInitializedAsync()
    {
        ListaVehiculos = await vehiculoService.ListarVehiculos();
        ListaDistribuidores = await distribuidorServices.ListarDistribuidores(d => d.DistribuidorId > 0);

        Pedido = await pedidoServices.Buscar(PedidoId);
    }

    private async Task Guardar()
    {
        var ok = await pedidoServices.Guardar(Pedido);

        if (ok)
            nav.NavigateTo("/pedidos");
        else
            errorMensaje = "No se pudo guardar el pedido.";
    }


    public void AbrirModalVehiculos()
    {
        mostrarModalVehiculos = true;
    }
    public void CerrarModalVehiculos()
    {
        mostrarModalVehiculos = false;
    } 

    public void AbrirModalCantidadPrecio(Vehiculo v)
    {
        VehiculoSeleccionado = v;
        Cantidad = 1;
        Precio = v.Precio;

        mostrarModalVehiculos = false;
        mostrarModalCantidadPrecio = true;
    }

    public void CerrarModalCantidadPrecio()
    {
        mostrarModalCantidadPrecio = false;
    }

    public void AbrirModalDatos(Vehiculo v)
    {
        VehiculoSeleccionado = v;
        mostrarModalDatosVehiculo = true;
    }

    public void CerrarModalDatos() 
    { 
        mostrarModalDatosVehiculo = false; 
    }


    private async Task AgregarDetalle()
    {
        var detalle = new PedidoDetalle
        {
            VehiculoId = VehiculoSeleccionado.VehiculoId,
            Cantidad = Cantidad,
            PrecioUnitario = Precio
        };

        Pedido.PedidoDetalles.Add(detalle);
        mostrarModalCantidadPrecio = false;
    }

    private void RemoverDetalle(PedidoDetalle det)
    {
        Pedido.PedidoDetalles.Remove(det);
    }
}
