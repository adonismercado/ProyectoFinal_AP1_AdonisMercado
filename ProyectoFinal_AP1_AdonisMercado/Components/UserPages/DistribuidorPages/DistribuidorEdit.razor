@page "/distribuidor/edit/{DistribuidorId:int}"
@layout EmptyLayout

@attribute [Authorize(Roles = "User")]
@inject DistribuidorServices distribuidorServices
@inject NavigationManager nav
@inject ToastService toastService
@rendermode InteractiveServer

<PageTitle>Editar Distribuidor</PageTitle>

<div class="container d-flex justify-content-center align-items-start mt-5">
    <div class="row w-100 justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="fw-bold">Editar Distribuidor</h2>

                <a href="/distribuidores" class="btn btn-light d-flex align-items-center gap-2">
                    <i class="fa-solid fa-arrow-left"></i> Volver
                </a>
            </div>

            <div class="card shadow-lg">
                <div class="card-body p-4">

                    <EditForm Model="Distribuidor" OnValidSubmit="Guardar" FormName="EditDistributor">

                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label fw-bold">ID Distribuidor</label>
                            <InputNumber class="form-control" @bind-Value="Distribuidor.DistribuidorId" readonly />
							<ValidationMessage For="() => Distribuidor.DistribuidorId" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Nombre</label>
                            <InputText class="form-control" @bind-Value="Distribuidor.Nombre" placeholder="Nombre completo" />
                            <ValidationMessage For="() => Distribuidor.Nombre" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Correo electrónico</label>
                            <InputText type="email" class="form-control" @bind-Value="Distribuidor.Email" placeholder="correo@ejemplo.com" />
                            <ValidationMessage For="() => Distribuidor.Email" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Teléfono</label>
                            <InputText class="form-control" @bind-Value="Distribuidor.Telefono" placeholder="809-000-0000" />
                            <ValidationMessage For="() => Distribuidor.Telefono" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Fax</label>
                            <InputText class="form-control" @bind-Value="Distribuidor.Fax" placeholder="Fax" />
                            <ValidationMessage For="() => Distribuidor.Fax" class="text-danger" />
                        </div>

                        @if (!string.IsNullOrWhiteSpace(errorMensaje))
                        {
                            <div class="alert alert-danger text-center">@errorMensaje</div>
                        }

                        <button type="submit" class="btn btn-danger w-100 mt-3 d-flex justify-content-center align-items-center gap-2">
                            <i class="fa-solid fa-floppy-disk"></i> Guardar
                        </button>

                    </EditForm>

                </div>
            </div>

        </div>
    </div>
</div>

@code {
    [Parameter] public int DistribuidorId { get; set; }

    public Distribuidor Distribuidor { get; set; } = new();
    public string? errorMensaje { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (DistribuidorId > 0)
        {
            var distribuidor = await distribuidorServices.Buscar(DistribuidorId);

            if (distribuidor != null)
            {
                Distribuidor = distribuidor;
            }
            else
            {
                errorMensaje = "No se encontró el distribuidor.";
                toastService.ShowError("El distribuidor no existe.");
            }
        }
    }

    private async Task Guardar()
    {
        var modificado = await distribuidorServices.Guardar(Distribuidor);

        if (modificado)
        {
            toastService.ShowSuccess("Distribuidor actualizado exitosamente!");
            nav.NavigateTo("/distribuidores");
        }
        else
        {
            errorMensaje = "No se pudo actualizar el distribuidor.";
            toastService.ShowError("No se pudo actualizar el distribuidor.");
        }
    }
}
