@page "/distribuidor/create"
@layout EmptyLayout

@attribute [Authorize(Roles = "User")]
@inject DistribuidorServices distribuidorServices
@inject NavigationManager nav
@inject ToastService toastService
@rendermode InteractiveServer

<PageTitle>Crear Distribuidor</PageTitle>

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Crear Distribuidor</h2>

        <a href="/distribuidores" class="btn btn-light d-flex align-items-center gap-2">
            <i class="fa-solid fa-arrow-left"></i> Volver
        </a>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-4">

            <EditForm Model="Distribuidor" OnValidSubmit="Guardar" FormName="CreateDistributor">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="d-flex flex-column align-items-center">

                    <div class="mb-3">
                        <label class="form-label fw-bold">DistribuidorID</label>
                        <input type="number" class="form-control" @bind="Distribuidor.DistribuidorId" readonly />
                        <ValidationMessage For="() => Distribuidor.DistribuidorId" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Nombre</label>
                        <input type="text" class="form-control" @bind="Distribuidor.Nombre" placeholder="Nombre" />
                        <ValidationMessage For="() => Distribuidor.Nombre" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Correo electrónico</label>
                        <input type="email" class="form-control" @bind="Distribuidor.Email" placeholder="Correo electrónico" />
                        <ValidationMessage For="() => Distribuidor.Email" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Teléfono</label>
                        <input type="text" class="form-control" @bind="Distribuidor.Telefono" placeholder="Teléfono" />
                        <ValidationMessage For="() => Distribuidor.Telefono" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Fax</label>
                        <input type="text" class="form-control" @bind="Distribuidor.Fax" placeholder="Fax" />
                        <ValidationMessage For="() => Distribuidor.Fax" />
                    </div>

                </div>

                @if (!string.IsNullOrWhiteSpace(errorMensaje))
                {
                    <div class="alert alert-danger mt-3 text-center">@errorMensaje</div>
                }

                <div class="mt-4 d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger px-4 d-flex align-items-center gap-2">
                        <i class="fa-solid fa-floppy-disk"></i> Guardar
                    </button>
                </div>

            </EditForm>

        </div>
    </div>

</div>

@code {
    public Distribuidor Distribuidor { get; set; } = new();
    public string? errorMensaje { get; set; }

    public async Task Guardar()
    {
        var creado = await distribuidorServices.Guardar(Distribuidor);

        if (creado)
        {
            toastService.ShowSuccess("Distribuidor creado correctamente.");
            nav.NavigateTo("/distribuidores");
        }
        else
        {
            toastService.ShowError("No se pudo guardar el distribuidor.");
        }
    }
}
