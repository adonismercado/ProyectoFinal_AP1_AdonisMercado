@page "/distribuidores"

@inject DistribuidorServices distribuidorServices
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<PageTitle>Distribuidores</PageTitle>

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Distribuidores</h2>

        <a href="/" class="btn btn-light d-flex align-items-center gap-2">
            <i class="fa-solid fa-house"></i> Inicio
        </a>
    </div>

    <div class="card shadow-sm border-0">

        <div class="card-header bg-white py-3">
            <div class="row g-3 align-items-end">

                <div class="col-md-3">
                    <label class="form-label fw-bold">Filtrar por</label>
                    <select class="form-select" @bind="Filtro">
                        <option value="" disabled selected>Seleccione...</option>
                        <option value="DistribuidorId">ID</option>
                        <option value="Nombre">Nombre</option>
                        <option value="Email">Correo</option>
                        <option value="Telefono">Teléfono</option>
                        <option value="Fax">Fax</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold">Buscar</label>
                    <div class="input-group">
                        <input type="text" class="form-control" @bind="ValorFiltro" placeholder="Buscar..." />
                        <button class="btn btn-danger" @onclick="Buscar">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </div>
                </div>

                <div class="col-md-5 text-end">
                    <a href="/distribuidor/create" class="btn btn-danger">
                        <i class="fa-solid fa-plus me-2"></i> Agregar Distribuidor
                    </a>

                </div>

            </div>
        </div>

        <div class="card-body px-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">

                    <thead class="bg-light">
                        <tr class="text-center fw-bold">
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Teléfono</th>
                            <th>Fax</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var distribuidor in ListaDistribuidores)
                        {
                            <tr class="text-center">
                                <td>@distribuidor.DistribuidorId</td>
                                <td>@distribuidor.Nombre</td>
                                <td>@distribuidor.Email</td>
                                <td>@distribuidor.Telefono</td>
                                <td>@distribuidor.Fax</td>

                                <td class="text-center">

                                    <a class="btn btn-sm btn-warning me-2 text-white"
                                       href="/distribuidor/edit/@distribuidor.DistribuidorId">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>

                                    <button class="btn btn-sm btn-danger"
                                            @onclick="() => AbrirModal(distribuidor.DistribuidorId)">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>

                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>

        <div class="card-footer text-center bg-white py-3">
            <span class="text-muted">Mostrando @ListaDistribuidores.Count distribuidor(es)</span>
        </div>

    </div>
</div>

@if (mostrarModal)
{
    <div class="modal-overlay" @onclick="CerrarModal">
        <div class="modal-content" @onclick:stopPropagation="true">

            <div class="modal-header">
                <h5 class="fw-bold">Confirmar Eliminación</h5>
                <button class="btn-close-modal" @onclick="CerrarModal">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>

            <div class="modal-body text-center">
                <i class="fa-solid fa-triangle-exclamation text-warning" style="font-size:50px;"></i>
                <p class="mt-3">¿Seguro que desea eliminar este distribuidor?</p>
                <p class="text-muted">Esta acción no se puede deshacer.</p>
            </div>

            <div class="modal-footer d-flex justify-content-end gap-3">
                <button class="btn btn-secondary" @onclick="CerrarModal">Cancelar</button>
                <button class="btn btn-danger" @onclick="EliminarDistribuidor">Eliminar</button>
            </div>

        </div>
    </div>
}

@code {
    public List<Distribuidor> ListaDistribuidores { get; set; } = new();
    public string Filtro { get; set; } = "";
    public string ValorFiltro { get; set; } = "";
    public bool mostrarModal = false;
    public int DistribuidorIdAEliminar { get; set; }

    protected override async Task OnInitializedAsync()
    {
        ListaDistribuidores = await distribuidorServices.ListarDistribuidores(d => d.DistribuidorId > 0);
    }

    public async Task Buscar()
    {
        if (!string.IsNullOrWhiteSpace(ValorFiltro))
        {
            if (Filtro == "DistribuidorId" && int.TryParse(ValorFiltro, out var distribuidorId))
            {
                ListaDistribuidores = await distribuidorServices.ListarDistribuidores(d => d.DistribuidorId == distribuidorId);
            }
            else if (Filtro == "Nombre")
            {
                ListaDistribuidores = await distribuidorServices.ListarDistribuidores(d => d.Nombre.ToLower().Contains(ValorFiltro));
            }
            else if (Filtro == "Email")
            {
                ListaDistribuidores = await distribuidorServices.ListarDistribuidores(d => d.Email.ToLower().Contains(ValorFiltro));
            }
            else if (Filtro == "Telefono")
            {
                ListaDistribuidores = await distribuidorServices.ListarDistribuidores(d => d.Telefono.ToLower().Contains(ValorFiltro));
            }
            else if (Filtro == "Fax")
            {
                ListaDistribuidores = await distribuidorServices.ListarDistribuidores(d => d.Fax.ToLower().Contains(ValorFiltro));
            }
        }
        else
        {
            ListaDistribuidores = await distribuidorServices.ListarDistribuidores(d => d.DistribuidorId > 0);
        }
    }

    public void AbrirModal(int id)
    {
        DistribuidorIdAEliminar = id;
        mostrarModal = true;
    }

    public void CerrarModal() => mostrarModal = false;

    public async Task EliminarDistribuidor()
    {
        var ok = await distribuidorServices.Eliminar(DistribuidorIdAEliminar);

        if (ok)
            ListaDistribuidores = await distribuidorServices.ListarDistribuidores(d => d.DistribuidorId > 0);

        CerrarModal();
    }
}
