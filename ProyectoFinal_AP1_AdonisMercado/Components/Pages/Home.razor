@page "/"
@attribute [Authorize(Roles = "User")]
@layout EmptyLayout

@inject PedidoServices pedidoServices
@inject DistribuidorServices distribuidorServices
@inject DocumentoServices documentoServices

<div class="container-fluid py-4">
    <div class="text-center mb-4">
        <img src="images/auto-franklin-logo-removebg-preview.png"
             alt="AutoFranklin Logo"
             style="width:160px;" />
    </div>

    <h1 class="fw-bold text-center mb-5">BIENVENIDO AL PANEL DE USUARIO</h1>

    <div class="row g-4 justify-content-center mb-5">

        <div class="col-12 col-md-3">
            <div class="card shadow stat-card p-4 text-center">
                <i class="fa fa-users text-danger" style="font-size:36px;"></i>
                <h6 class="mt-3 text-uppercase fw-bold">Distribuidores</h6>
                <p class="display-6 fw-bold mb-0">@TotalDistribuidores</p>
            </div>
        </div>

        <div class="col-12 col-md-3">
            <div class="card shadow stat-card p-4 text-center">
                <i class="fa fa-box text-danger" style="font-size:36px;"></i>
                <h6 class="mt-3 text-uppercase fw-bold">Pedidos Activos</h6>
                <p class="display-6 fw-bold mb-0">@PedidosActivos</p>
            </div>
        </div>

        <div class="col-12 col-md-3">
            <div class="card shadow stat-card p-4 text-center">
                <i class="fa fa-truck text-danger" style="font-size:36px;"></i>
                <h6 class="mt-3 text-uppercase fw-bold">Pedidos Enviados</h6>
                <p class="display-6 fw-bold mb-0">@PedidosEnviados</p>
            </div>
        </div>

        <div class="col-12 col-md-3">
            <div class="card shadow stat-card p-4 text-center">
                <i class="fa fa-check text-danger" style="font-size:36px;"></i>
                <h6 class="mt-3 text-uppercase fw-bold">Pedidos Completos</h6>
                <p class="display-6 fw-bold mb-0">@PedidosCompletados</p>
            </div>
        </div>
    </div>

    <div class="row mt-4 justify-content-center">
        <div class="col-12 col-lg-4 mb-5">

            <h3 class="fw-bold mb-4 text-start">Accesos Rápidos</h3>

            <div class="d-grid gap-4">

                <a href="/distribuidores" class="text-decoration-none">
                    <div class="card shadow-sm access-card border-0 p-3 d-flex flex-row align-items-center">
                        <i class="fa-solid fa-users text-danger me-3" style="font-size:28px;"></i>
                        <span class="fw-bold fs-5 text-dark">Distribuidores</span>
                    </div>
                </a>

                <a href="/pedidos" class="text-decoration-none">
                    <div class="card shadow-sm access-card border-0 p-3 d-flex flex-row align-items-center">
                        <i class="fa-solid fa-cart-shopping text-danger me-3" style="font-size:28px;"></i>
                        <span class="fw-bold fs-5 text-dark">Pedidos</span>
                    </div>
                </a>

                <a href="/documentos" class="text-decoration-none">
                    <div class="card shadow-sm access-card border-0 p-3 d-flex flex-row align-items-center">
                        <i class="fa-solid fa-file-lines text-danger me-3" style="font-size:28px;"></i>
                        <span class="fw-bold fs-5 text-dark">Documentos</span>
                    </div>
                </a>

            </div>
        </div>

        <div class="col-12 col-lg-7">

            <h3 class="fw-bold mb-4 text-start">Últimos Pedidos</h3>

            <div class="card shadow-sm border-0 p-2">
                <div class="table-responsive">
                    <table class="table table-hover align-middle text-center mb-0">
                        <thead class="bg-light fw-bold">
                            <tr>
                                <th>Fecha</th>
                                <th>Pedido</th>
                                <th>Distribuidor</th>
                                <th>Estado</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var p in UltimosPedidos)
                            {
                                <tr>
                                    <td>@p.FechaPedido.ToShortDateString()</td>
                                    <td>@p.NombrePedido</td>
                                    <td>@p.Distribuidor?.Nombre</td>
                                    <td>
                                        @if (p.Estado == "Enviado")
                                        {
                                            <span class="badge bg-danger">Enviado</span>
                                        }
                                        else if (p.Estado == "Completado")
                                        {
                                            <span class="badge bg-success">Completado</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No Enviado</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>

        </div>

    </div>

</div>

@code {
    public int TotalDistribuidores { get; set; }
    public int PedidosActivos { get; set; }
    public int PedidosEnviados { get; set; }
    public int PedidosCompletados { get; set; }
    public int DocumentosPendientes { get; set; }
    public int PedidosNoEnviados { get; set; }

    public List<Pedido> UltimosPedidos { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        TotalDistribuidores = (await distribuidorServices.ListarDistribuidores(d => d.isActive)).Count;

        var pedidos = await pedidoServices.ListarPedidos(p => p.isActive);
        PedidosActivos = pedidos.Count;
        PedidosEnviados = pedidos.Count(p => p.Estado == "Enviado");
        PedidosCompletados = pedidos.Count(p => p.Estado == "Completado");
        PedidosNoEnviados = pedidos.Count(p => p.Estado == "No Enviado");

		UltimosPedidos = pedidos
			.OrderByDescending(p => p.PedidoId)
			.Take(6)
			.ToList();
	}
}

