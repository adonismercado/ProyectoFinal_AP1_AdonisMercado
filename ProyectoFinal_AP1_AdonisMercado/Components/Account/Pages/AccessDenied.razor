@page "/Account/AccessDenied"
@layout EmptyLayout

<PageTitle>Acceso denegado</PageTitle>

<div class="container-fluid d-flex justify-content-center align-items-start" style="min-height: 80vh;">
    <div class="row w-100 justify-content-center mt-5">

        <div class="col-12 col-sm-8 col-md-6 col-lg-4">

            <div class="card shadow-lg border-0">

                <!-- TÍTULO -->
                <div class="card-header text-center bg-white py-4">
                    <h3 class="card-title fw-bold text-danger mb-0">
                        <i class="fa-solid fa-ban me-2"></i>
                        Acceso denegado
                    </h3>
                </div>

                <!-- CONTENIDO -->
                <div class="card-body text-center p-4">

                    <p class="text-muted mb-4 fs-5">
                        No tienes permisos para acceder a esta página.
                    </p>

                    <a href="/" class="btn btn-danger w-100 py-2" style="background: #BD1717; color:white;">
                        <i class="fa-solid fa-house me-2"></i>
                        Volver al inicio
                    </a>

                </div>

            </div>

        </div>
    </div>
</div>
