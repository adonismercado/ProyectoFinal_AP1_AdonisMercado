@page "/Account/Manage/RenamePasskey/{Id}"

@using ProyectoFinal_AP1_AdonisMercado.Data
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Identity
@using System.Buffers.Text

@inject UserManager<ApplicationUser> UserManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Renombrar Passkey</PageTitle>

<div class="container d-flex justify-content-center align-items-start mt-5">
    <div class="row w-100 justify-content-center">
        <div class="col-12 col-sm-10 col-md-7 col-lg-5 col-xl-4">

            <div class="card shadow-lg">
                <div class="card-header text-center">
                    <h2 class="card-title mb-0 fw-bold">
                        @if (passkey?.Name is { } name)
                        {
                            @($"Renombrar \"{name}\"")
                        }
                        else
                        {
                            @("Asignar nombre al passkey")
                        }
                    </h2>
                </div>

                <div class="card-body p-4">

                    <EditForm Model="Input" OnValidSubmit="Rename" FormName="rename-passkey" method="post">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger mb-3" />

                        <div class="mb-3">
                            <label for="Input.Name" class="form-label">Nombre del passkey</label>
                            <InputText @bind-Value="Input.Name"
                                       id="Input.Name"
                                       class="form-control"
                                       placeholder="Mi passkey" />
                            <ValidationMessage For="() => Input.Name" class="text-danger" />
                        </div>

                        <button type="submit" class="btn btn-danger w-100">
                            Guardar nombre
                        </button>
                    </EditForm>

                </div>
            </div>

        </div>
    </div>
</div>

@code {
    private ApplicationUser? user;
    private UserPasskeyInfo? passkey;

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    [Parameter]
    public string? Id { get; set; }

    [SupplyParameterFromForm(FormName = "rename-passkey")]
    private InputModel Input { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        Input ??= new();
        user = await UserManager.GetUserAsync(HttpContext.User);

        if (user is null)
        {
            RedirectManager.RedirectToInvalidUser(UserManager, HttpContext);
            return;
        }

        byte[] credentialId;

        try
        {
            credentialId = Base64Url.DecodeFromChars(Id);
        }
        catch
        {
            RedirectManager.RedirectToWithStatus("Account/Manage/Passkeys", "Error: ID inválido.", HttpContext);
            return;
        }

        passkey = await UserManager.GetPasskeyAsync(user, credentialId);

        if (passkey is null)
        {
            RedirectManager.RedirectToWithStatus("Account/Manage/Passkeys", "Error: No se encontró el passkey.", HttpContext);
            return;
        }

        Input.Name = passkey.Name ?? "";
    }

    private async Task Rename()
    {
        passkey!.Name = Input.Name;

        var result = await UserManager.AddOrUpdatePasskeyAsync(user!, passkey);

        if (!result.Succeeded)
        {
            RedirectManager.RedirectToWithStatus("Account/Manage/Passkeys", "Error: No se pudo actualizar.", HttpContext);
            return;
        }

        RedirectManager.RedirectToWithStatus("Account/Manage/Passkeys", "Passkey actualizado.", HttpContext);
    }

    private sealed class InputModel
    {
        [Required]
        [StringLength(200)]
        public string Name { get; set; } = "";
    }
}
