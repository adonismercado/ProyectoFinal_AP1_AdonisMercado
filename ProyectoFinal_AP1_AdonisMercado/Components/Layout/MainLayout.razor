@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthStateProvider

<div style="position: fixed; top: 20px; right: 20px; z-index: 9999;">
    <Toasts class="p-3"
            AutoHide="true"
            Delay="4000"
            Placement="ToastsPlacement.TopRight"
            ShowCloseButton="true" />
</div>

<nav class="navbar navbar-expand-lg py-3" style="background:#BD1717; color:white;">
    <div class="container-fluid">

        <a class="navbar-brand d-flex align-items-center" href="/">
            <img src="images/autofranklin-layout-removebg-preview.png"
                 alt="AutoFranklin Logo"
                 style="height:45px; width:auto;" class="me-3" />
        </a>

        <button class="navbar-toggler text-white"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#mainNavbar"
                aria-controls="mainNavbar"
                aria-expanded="false"
                aria-label="Toggle navigation">

            <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNavbar">

            <ul class="navbar-nav me-auto mb-2 mb-lg-0 mt-3 mt-lg-0">

                <li class="nav-item">
                    <NavLink href="/" class="nav-link text-white fw-semibold">Inicio</NavLink>
                </li>

                <li class="nav-item">
                    <NavLink href="/distribuidores" class="nav-link text-white fw-semibold">Distribuidores</NavLink>
                </li>

                <li class="nav-item">
                    <NavLink href="/pedidos" class="nav-link text-white fw-semibold">Pedidos</NavLink>
                </li>

                <li class="nav-item">
                    <NavLink href="/documentos" class="nav-link text-white fw-semibold">Documentos</NavLink>
                </li>

            </ul>

            <div class="d-flex flex-column flex-lg-row align-items-lg-center gap-2 mb-3 mb-lg-0">

                @if (isAuthenticated)
                {
                    <a href="/Account/Manage"
                       class="btn btn-outline-light d-flex align-items-center gap-2" style="background: #BD1717; color:white; border-color:#BD1717;">
                        <i class="fa-solid fa-user"></i> @userName
                    </a>

                    <a href="/DoLogout"
                       class="btn btn-light d-flex align-items-center gap-2" style="background: #BD1717; color:white; border-color:#BD1717;">
                        <i class="fa-solid fa-right-from-bracket"></i> Salir
                    </a>
                }
                else
                {
                    <a href="/Account/Login"
                       class="btn btn-light">
                        Iniciar sesión
                    </a>
                }

            </div>

        </div>
    </div>
</nav>


<div class="container-fluid py-4">
    @Body
</div>

@code {
    private bool isAuthenticated;
    private string? userName;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        isAuthenticated = user.Identity?.IsAuthenticated ?? false;
        userName = isAuthenticated ? user.Identity?.Name : "";
    }
}
