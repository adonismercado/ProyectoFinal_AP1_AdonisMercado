@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthStateProvider

<Toasts class="p-3" AutoHide="true" StackLength="3" Placement="ToastsPlacement.TopRight" />
<div class="wrapper bg-danger">

    <!-- SIDEBAR -->
    <nav id="sidebar" class="sidebar js-sidebar">
        <div class="sidebar-content js-simplebar">

            <a class="sidebar-brand" href="/">
                <span class="align-middle">AutoFranklin</span>
            </a>

            <ul class="sidebar-nav">

                <li class="sidebar-header">Menú</li>

                <li class="sidebar-item">
                    <NavLink class="sidebar-link" href="">
                        <i class="fa-solid fa-house align-middle me-2"></i>
                        <span class="align-middle">Inicio</span>
                    </NavLink>
                </li>

                <li class="sidebar-item">
                    <NavLink class="sidebar-link" href="/distribuidores">
                        <i class="fa-solid fa-users align-middle me-2"></i>
                        <span class="align-middle">Distribuidores</span>
                    </NavLink>
                </li>

                <li class="sidebar-item">
                    <NavLink class="sidebar-link" href="/pedidos">
                        <i class="fa-solid fa-cart-shopping align-middle me-2"></i>
                        <span class="align-middle">Pedidos</span>
                    </NavLink>
                </li>

                <li class="sidebar-item">
                    <NavLink class="sidebar-link" href="/documentos">
                        <i class="fa-solid fa-file-lines align-middle me-2"></i>
                        <span class="align-middle">Documentos</span>
                    </NavLink>
                </li>

            </ul>
        </div>
    </nav>

    <!-- MAIN -->
    <div class="main">

        <!-- TOPBAR -->
        <nav class="navbar navbar-expand navbar-light navbar-bg">

            <a class="sidebar-toggle js-sidebar-toggle">
                <i class="hamburger align-self-center"></i>
            </a>

            <div class="navbar-collapse collapse">
                <ul class="navbar-nav ms-auto">

                    @if (isAuthenticated)
                    {
                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="fa-solid fa-user me-2"></i>
                                <span class="text-dark">@userName</span>
                            </a>

                            <div class="dropdown-menu dropdown-menu-end">

                                <a class="dropdown-item" href="/Account/Manage">
                                    <i class="fa-solid fa-gear me-2"></i>
                                    Perfil
                                </a>

                                <div class="dropdown-divider"></div>

                                <a class="dropdown-item text-danger fw-bold" href="/DoLogout">
                                    <i class="fa-solid fa-right-from-bracket me-2"></i>
                                    Cerrar sesión
                                </a>

                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">
                                <i class="fa-solid fa-right-to-bracket me-2"></i>
                                Iniciar sesión
                            </a>
                        </li>
                    }

                </ul>
            </div>

        </nav>

        <main class="content">
            @Body
        </main>

    </div>

</div>

@code {
    private bool isAuthenticated;
    private string? userName;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        isAuthenticated = user.Identity?.IsAuthenticated ?? false;
        userName = isAuthenticated ? user.Identity?.Name : null;
    }
}
