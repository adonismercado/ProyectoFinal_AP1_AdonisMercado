@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthStateProvider

<div style="position: fixed; top: 20px; right: 20px; z-index: 9999;">
    <Toasts class="p-3"
            AutoHide="true"
            Delay="4000"
            Placement="ToastsPlacement.TopRight"
            ShowCloseButton="true" />
</div>

<nav class="navbar navbar-expand-lg py-3" style="background: #BD1717; color:white;">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center" href="/">
            <img src="images/autofranklin-layout-removebg-preview.png"
                 alt="AutoFranklin Logo"
                 style="height:45px; width:auto;" class="me-4" />
        </a>

        <button class="navbar-toggler" type="button" style="border:none;">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse show">

            <ul class="navbar-nav me-auto gap-2">

                <li class="nav-item">
                    <NavLink href="/admin" class="nav-link text-white fw-semibold">Inicio</NavLink>
                </li>

                <li class="nav-item">
                    <NavLink href="/deshabilitados" class="nav-link text-white fw-semibold">Deshabilitados</NavLink>
                </li>

                <li class="nav-item">
                    <NavLink href="/vehiculos" class="nav-link text-white fw-semibold">Veh&iacute;culos</NavLink>
                </li>

            </ul>

            <div class="d-flex align-items-center gap-3">

                @if (isAuthenticated)
                {
                    <a href="/Account/Manage" class="btn btn-danger d-flex align-items-center gap-2" style="background: #BD1717; border-color:#BD1717; color:white;">
                        <i class="fa-solid fa-user"></i> @userName
                    </a>

                    <a href="/DoLogout" class="btn btn-danger d-flex align-items-center gap-2" style="background: #BD1717; border-color:white;">
                        <i class="fa-solid fa-right-from-bracket"></i> Salir
                    </a>
                }
                else
                {
                    <a href="/Account/Login" class="btn btn-danger" style="background: #BD1717; border-color: #BD1717; color:white;">Iniciar sesión</a>
                }

            </div>

        </div>
    </div>
</nav>

<div class="container-fluid py-4">
    @Body
</div>

@code {
    private bool isAuthenticated;
    private string? userName;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        isAuthenticated = user.Identity?.IsAuthenticated ?? false;
        userName = isAuthenticated ? user.Identity?.Name : "";
    }
}
