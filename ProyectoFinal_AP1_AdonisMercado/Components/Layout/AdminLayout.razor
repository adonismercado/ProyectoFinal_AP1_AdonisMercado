@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthStateProvider

<div class="wrapper bg-danger">

    <!-- SIDEBAR -->
    <nav id="sidebar" class="sidebar js-sidebar">
        <div class="sidebar-content js-simplebar">

            <a class="sidebar-brand" href="/">
                <span class="align-middle">AutoFranklin - Compras</span>
            </a>

            <ul class="sidebar-nav">

                <li class="sidebar-header">Menú</li>

                <li class="sidebar-item">
                    <NavLink class="sidebar-link" href="/admin">
                        <i class="fa-solid fa-house align-middle me-2"></i>
                        <span class="align-middle">Inicio</span>
                    </NavLink>
                </li>

                <li class="sidebar-item">
                    <NavLink class="sidebar-link" href="/usuarios">
                        <i class="fa-solid fa-users align-middle me-2"></i>
                        <span class="align-middle">Usuarios</span>
                    </NavLink>
                </li>

                <li class="sidebar-item">
                    <NavLink class="sidebar-link" href="/deshabilitados">
                        <i class="fa-solid fa-circle-xmark align-middle me-2"></i>
                        <span class="align-middle">Deshabilitados</span>
                    </NavLink>
                </li>

                <li class="sidebar-item">
                    <NavLink class="sidebar-link" href="/vehiculos">
                        <i class="fa-solid fa-car align-middle me-2"></i>
                        <span class="align-middle">Vehiculos</span>
                    </NavLink>
                </li>

            </ul>
        </div>
    </nav>

    <!-- MAIN -->
    <div class="main">

        <!-- TOPBAR -->
        <nav class="navbar navbar-expand navbar-light navbar-bg">

            <a class="sidebar-toggle js-sidebar-toggle">
                <i class="hamburger align-self-center"></i>
            </a>

            <div class="navbar-collapse collapse">
                <ul class="navbar-nav ms-auto">

                    @if (isAuthenticated)
                    {
                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="fa-solid fa-user me-2"></i>
                                <span class="text-dark">@userName</span>
                            </a>

                            <div class="dropdown-menu dropdown-menu-end">

                                <a class="dropdown-item" href="/Account/Manage">
                                    <i class="fa-solid fa-gear me-2"></i>
                                    Perfil
                                </a>

                                <div class="dropdown-divider"></div>

                                <a class="dropdown-item text-danger fw-bold" href="/DoLogout">
                                    <i class="fa-solid fa-right-from-bracket me-2"></i>
                                    Cerrar sesión
                                </a>

                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">
                                <i class="fa-solid fa-right-to-bracket me-2"></i>
                                Iniciar sesión
                            </a>
                        </li>
                    }

                </ul>
            </div>

        </nav>

        <main class="content">
            @Body
        </main>

    </div>

</div>

@code {
    private bool isAuthenticated;
    private string? userName;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        isAuthenticated = user.Identity?.IsAuthenticated ?? false;
        userName = isAuthenticated ? user.Identity?.Name : null;
    }
}