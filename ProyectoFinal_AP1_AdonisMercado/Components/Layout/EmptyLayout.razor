@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthStateProvider

<Toasts class="p-3" AutoHide="true" StackLength="3" Placement="ToastsPlacement.TopRight" />

<nav class="navbar navbar-expand-lg py-3 shadow-sm" style="background: #BD1717;">
    <div class="container-fluid">
        <div class="navbar-collapse show d-flex">

            <div class="ms-auto d-flex align-items-center gap-3">

                @if (isAuthenticated)
                {
                    <a href="/Account/Manage"
                       class="btn btn-outline-danger btn-sm d-flex align-items-center gap-2" style="border-color: #BD1717; color:white;">
                        <i class="fa-solid fa-user"></i> @userName
                    </a>

                    <a href="/DoLogout"
                       class="btn btn-danger btn-sm d-flex align-items-center gap-2" style="background:#BD1717; border-color:white;">
                        <i class="fa-solid fa-right-from-bracket"></i>
                        Salir
                    </a>
                }
                else
                {
                    <a href="/Account/Login" class="btn btn-light btn-sm">
                        Iniciar sesión
                    </a>
                }

            </div>

        </div>

    </div>
</nav>


<div class="container py-4">
    @Body
</div>

@code {
    private bool isAuthenticated;
    private string? userName;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        isAuthenticated = user.Identity?.IsAuthenticated ?? false;
        userName = isAuthenticated ? user.Identity?.Name : "";
    }
}
