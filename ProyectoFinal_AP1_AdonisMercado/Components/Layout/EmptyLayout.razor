@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthStateProvider
<Toasts class="p-3" AutoHide="true" StackLength="3" Placement="ToastsPlacement.TopRight" />

<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm px-4">

    <a class="navbar-brand fw-bold d-flex align-items-center gap-2 text-black" href="/">
        <i class="fa-solid fa-car-side text-danger"></i>
        AutoFranklin
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topbarMenu">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="topbarMenu">
        <ul class="navbar-nav ms-auto">

            @if (isAuthenticated)
            {
                <li class="nav-item dropdown">

                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                        <i class="fa-solid fa-user"></i> @userName
                    </a>

                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item" href="/Account/Manage">
                                <i class="fa-solid fa-gear me-2"></i> Perfil
                            </a>
                        </li>

                        <li><hr class="dropdown-divider" /></li>

                        <li>
                            <form method="post" action="/Account/Logout" id="logoutForm">
                                <AntiforgeryToken />
                                <input type="hidden" name="returnUrl" value="/" />
                            </form>

                            <a class="dropdown-item text-danger" href="/DoLogout">
                                <i class="fa-solid fa-right-from-bracket me-2"></i> Cerrar sesión
                            </a>
                        </li>
                    </ul>

                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" href="/Account/Login">
                        <i class="fa-solid fa-right-to-bracket"></i> Iniciar sesión
                    </a>
                </li>
            }

        </ul>
    </div>

</nav>

<!-- CONTENIDO DE LA PÁGINA -->
<div class="container py-4">
    @Body
</div>

@code {
    private bool isAuthenticated;
    private string? userName;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        isAuthenticated = user.Identity?.IsAuthenticated ?? false;
        userName = isAuthenticated ? user.Identity?.Name : "";
    }
}
